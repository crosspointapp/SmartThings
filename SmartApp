mappings {
	path("/summary") {
		action: [
			GET: "getSummary"
		]
	}
	path("/devices") {
		action: [
			GET: "getDevices"
		]
	}
	path("/devices/:id") {
		action: [
			GET: "getDevice",
			POST: "commandDevice"
		]
	}
}

// According to SmartApp Groovy Documentation
// "Due to the sandboxed nature of SmartApp and Device Handler execution, defining global constant variables will not work"
// "Instead, for any global constants youâ€™d like in your SmartApp or Device Handler, define a no-op getter method that returns the value"
def getRulesEndpointURL() {
	return "https://prod-api.ruleiot.com"
}

def installed() {
	initialize()
}

def updated() {
	unsubscribe()
	initialize()
}

